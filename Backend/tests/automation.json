{
    "info": {
      "name": "SodaCan Room Management API",
      "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
    },
    "item": [
      {
        "name": "Authentication",
        "item": [
          {
            "name": "Login",
            "request": {
              "method": "POST",
              "header": [
                {
                  "key": "Content-Type",
                  "value": "application/json"
                }
              ],
              "body": {
                "mode": "raw",
                "raw": "{\n  \"email\": \"test@example.com\",\n  \"password\": \"test123\"\n}"
              },
              "url": {
                "raw": "{{base_url}}/api/users/login",
                "host": ["{{base_url}}"],
                "path": ["api", "users", "login"]
              }
            },
            "response": []
          }
        ]
      },
      {
        "name": "Public Rooms",
        "item": [
          {
            "name": "Create Public Room",
            "request": {
              "method": "POST",
              "header": [
                {
                  "key": "Content-Type",
                  "value": "application/json"
                },
                {
                  "key": "Authorization",
                  "value": "Bearer {{access_token}}"
                }
              ],
              "body": {
                "mode": "raw",
                "raw": "{\n  \"name\": \"Public Lounge\"\n}"
              },
              "url": {
                "raw": "{{base_url}}/api/rooms/public",
                "host": ["{{base_url}}"],
                "path": ["api", "rooms", "public"]
              }
            },
            "event": [
              {
                "listen": "test",
                "script": {
                  "exec": [
                    "pm.test(\"Status code is 200\", function() {",
                    "    pm.response.to.have.status(200);",
                    "});",
                    "",
                    "pm.test(\"Response has room data\", function() {",
                    "    var jsonData = pm.response.json();",
                    "    pm.expect(jsonData).to.have.property('id');",
                    "    pm.expect(jsonData).to.have.property('name');",
                    "    pm.expect(jsonData.name).to.eql('Public Lounge');",
                    "    pm.collectionVariables.set(\"public_room_id\", jsonData.id);",
                    "});"
                  ],
                  "type": "text/javascript"
                }
              }
            ]
          },
          {
            "name": "List Public Rooms",
            "request": {
              "method": "GET",
              "header": [
                {
                  "key": "Authorization",
                  "value": "Bearer {{access_token}}"
                }
              ],
              "url": {
                "raw": "{{base_url}}/api/rooms/public",
                "host": ["{{base_url}}"],
                "path": ["api", "rooms", "public"]
              }
            },
            "event": [
              {
                "listen": "test",
                "script": {
                  "exec": [
                    "pm.test(\"Status code is 200\", function() {",
                    "    pm.response.to.have.status(200);",
                    "});",
                    "",
                    "pm.test(\"Response contains array of rooms\", function() {",
                    "    var jsonData = pm.response.json();",
                    "    pm.expect(jsonData).to.be.an('array');",
                    "    pm.expect(jsonData.length).to.be.at.least(1);",
                    "});"
                  ],
                  "type": "text/javascript"
                }
              }
            ]
          },
          {
            "name": "Delete Public Room",
            "request": {
              "method": "DELETE",
              "header": [
                {
                  "key": "Authorization",
                  "value": "Bearer {{access_token}}"
                }
              ],
              "url": {
                "raw": "{{base_url}}/api/rooms/public/{{public_room_id}}",
                "host": ["{{base_url}}"],
                "path": ["api", "rooms", "public", "{{public_room_id}}"]
              }
            },
            "event": [
              {
                "listen": "test",
                "script": {
                  "exec": [
                    "pm.test(\"Status code is 200\", function() {",
                    "    pm.response.to.have.status(200);",
                    "});",
                    "",
                    "pm.test(\"Success message received\", function() {",
                    "    var jsonData = pm.response.json();",
                    "    pm.expect(jsonData).to.have.property('message');",
                    "    pm.expect(jsonData.message).to.include('successfully');",
                    "});"
                  ],
                  "type": "text/javascript"
                }
              }
            ]
          }
        ]
      },
      {
        "name": "Private Rooms",
        "item": [
          {
            "name": "Create Private Room",
            "request": {
              "method": "POST",
              "header": [
                {
                  "key": "Content-Type",
                  "value": "application/json"
                },
                {
                  "key": "Authorization",
                  "value": "Bearer {{access_token}}"
                }
              ],
              "body": {
                "mode": "raw",
                "raw": "{\n  \"name\": \"Private VIP Room\"\n}"
              },
              "url": {
                "raw": "{{base_url}}/api/rooms/private",
                "host": ["{{base_url}}"],
                "path": ["api", "rooms", "private"]
              }
            },
            "event": [
              {
                "listen": "test",
                "script": {
                  "exec": [
                    "pm.test(\"Status code is 200\", function() {",
                    "    pm.response.to.have.status(200);",
                    "});",
                    "",
                    "pm.test(\"Response has private room data\", function() {",
                    "    var jsonData = pm.response.json();",
                    "    pm.expect(jsonData).to.have.property('id');",
                    "    pm.expect(jsonData).to.have.property('token');",
                    "    pm.expect(jsonData.name).to.eql('Private VIP Room');",
                    "    pm.collectionVariables.set(\"private_room_token\", jsonData.token);",
                    "});"
                  ],
                  "type": "text/javascript"
                }
              }
            ]
          },
          {
            "name": "List Private Rooms",
            "request": {
              "method": "GET",
              "header": [
                {
                  "key": "Authorization",
                  "value": "Bearer {{access_token}}"
                }
              ],
              "url": {
                "raw": "{{base_url}}/api/rooms/private",
                "host": ["{{base_url}}"],
                "path": ["api", "rooms", "private"]
              }
            },
            "event": [
              {
                "listen": "test",
                "script": {
                  "exec": [
                    "pm.test(\"Status code is 200\", function() {",
                    "    pm.response.to.have.status(200);",
                    "});",
                    "",
                    "pm.test(\"Response contains array of private rooms\", function() {",
                    "    var jsonData = pm.response.json();",
                    "    pm.expect(jsonData).to.be.an('array');",
                    "    pm.expect(jsonData.length).to.be.at.least(1);",
                    "});"
                  ],
                  "type": "text/javascript"
                }
              }
            ]
          },
          {
            "name": "Search Private Room by Token",
            "request": {
              "method": "GET",
              "header": [
                {
                  "key": "Authorization",
                  "value": "Bearer {{access_token}}"
                }
              ],
              "url": {
                "raw": "{{base_url}}/api/rooms/search/{{private_room_token}}",
                "host": ["{{base_url}}"],
                "path": ["api", "rooms", "search", "{{private_room_token}}"]
              }
            },
            "event": [
              {
                "listen": "test",
                "script": {
                  "exec": [
                    "pm.test(\"Status code is 200\", function() {",
                    "    pm.response.to.have.status(200);",
                    "});",
                    "",
                    "pm.test(\"Found the correct private room\", function() {",
                    "    var jsonData = pm.response.json();",
                    "    pm.expect(jsonData.token).to.eql(pm.collectionVariables.get(\"private_room_token\"));",
                    "});"
                  ],
                  "type": "text/javascript"
                }
              }
            ]
          },
          {
            "name": "Delete Private Room",
            "request": {
              "method": "DELETE",
              "header": [
                {
                  "key": "Authorization",
                  "value": "Bearer {{access_token}}"
                }
              ],
              "url": {
                "raw": "{{base_url}}/api/rooms/private/{{private_room_token}}",
                "host": ["{{base_url}}"],
                "path": ["api", "rooms", "private", "{{private_room_token}}"]
              }
            },
            "event": [
              {
                "listen": "test",
                "script": {
                  "exec": [
                    "pm.test(\"Status code is 200\", function() {",
                    "    pm.response.to.have.status(200);",
                    "});",
                    "",
                    "pm.test(\"Success message received\", function() {",
                    "    var jsonData = pm.response.json();",
                    "    pm.expect(jsonData).to.have.property('message');",
                    "    pm.expect(jsonData.message).to.include('successfully');",
                    "});"
                  ],
                  "type": "text/javascript"
                }
              }
            ]
          }
        ]
      }
    ],
    "variable": [
      {
        "key": "base_url",
        "value": "http://localhost:8000"
      },
      {
        "key": "access_token",
        "value": ""
      },
      {
        "key": "public_room_id",
        "value": ""
      },
      {
        "key": "private_room_token",
        "value": ""
      }
    ],
